@model WeBlog.Entities.Models.DTOs.RegisterRequestDTO;

@{
    ViewData["Title"] = "Register";
}



<div class="container">
    
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1>Register</h1>
        </div>
        <div class="col-md-6">
            <form method="post" asp-action="Register">
                <div class="mb-3">
                    <label asp-for="@Model.Email" class="form-label">Email</label>
                    <input type="email" class="form-control" asp-for="@Model.Email">
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label">Name</label>
                    <input type="text" class="form-control" asp-for="@Model.Name">
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.PhoneNumber" class="form-label">Phone Number</label>
                    <input type="tel" class="form-control" asp-for="@Model.PhoneNumber">
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Password" class="form-label">Password</label>
                    <input type="password" class="form-control" asp-for="@Model.Password">
                </div>

                <div class="mb-3">
                    <label for="role" class="form-label">Role</label>
                    <select class="form-select" id="role" name="role">
                        <option value="">Select Role</option>
                        <option value="Admin">Admin</option>
                        <option value="User">User</option>
                    </select>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary w-100">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>