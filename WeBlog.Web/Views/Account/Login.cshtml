@model WeBlog.Entities.Models.DTOs.LoginRequestDTO;

@{
    ViewData["Title"] = "Login";
}



<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1>Login</h1>
        </div>
        <div class="col-md-6">
            <form method="post" asp-controller="Account" asp-action="Login">
                <div class="mb-3">
                    <label asp-for="@Model.Username" class="form-label">Email</label>
                    <input type="text" class="form-control" asp-for="@Model.Username">
                    <span asp-validation-for="@Model.Username" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Password" class="form-label">Password</label>
                    <input type="password" class="form-control" asp-for="@Model.Password">
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary w-100">Login</button>
                    <p class="text-muted">Create new account <a asp-action="Register" asp-controller="Account" class="link-primary">Register</a></p>
                </div>
            </form>
        </div>
    </div>
</div>